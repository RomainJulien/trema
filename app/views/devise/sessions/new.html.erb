<div class="login-page">
  <div class="login-wrapper">
    <h2 class="login-title">Connexion</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="login-form">
        <div class="login-input">
          <%= f.input :email,
                      label: "Email",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "login-field" } %>
        </div>

        <div class="login-input">
          <%= f.input :password,
                      label: "Mot de passe",
                      required: false,
                      input_html: { autocomplete: "current-password", class: "login-field" } %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="login-remember">
            <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi" %>
          </div>
        <% end %>

        <div class="login-actions">
          <%= f.button :submit, "Se connecter", class: "login-button" %>
        </div>
      </div>
    <% end %>

    <div class="login-links">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "login-link-btn" %>
      <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class: "login-link-btn" %>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
