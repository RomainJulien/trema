<div class="forgot-page">
  <div class="forgot-wrapper">
    <h2 class="forgot-title">Mot de passe oublié ?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="forgot-form">
        <div class="forgot-input">
          <%= f.input :email,
                      label: "Email",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "forgot-field" } %>
        </div>

        <div class="forgot-actions">
          <%= f.button :submit, "Envoyer les instructions", class: "forgot-button" %>
        </div>
      </div>
    <% end %>

    <div class="forgot-links">
      <%= link_to "Se connecter", new_session_path(resource_name), class: "forgot-link-btn" %>
      <%= link_to "Créer un compte", new_registration_path(resource_name), class: "forgot-link-btn" %>
    </div>
  </div>
</div>


<%= render "devise/shared/links" %>
