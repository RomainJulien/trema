<div class="psy-profile-show">

  <!-- üîπ En-t√™te avec Titre, Description et Logo -->
  <div class="psy-profile-header">

    <div class="psy-profile-bg">
      <div class="psy-profile-content">
        <h2><span class="highlight"><%= @psy_profile.name %></span> !</h2>
        <p style= "font-size: 1.8em"><%= @psy_profile.description %></p>
      </div>
    </div>

    <div class="psy-profile-logo">
       <%= image_tag(@logo_path || 'default_profile.png', alt: @psy_profile.name) %>
    </div>

  </div>


  <div class="psy-profile-list">
    <% @job_psy.each_with_index do |job, index| %> <%# Remplace les titres et descriptions %>
      <div class="psy-profile-item <%= index.even? ? 'left' : 'right' %>">
        <div class="psy-profile-bg"></div>
          <div class="psy-profile-content">
            <div class ="psy-logo">
              <%= image_tag("psy_profiles_logo/#{job[:title].parameterize}.png", alt: job[:title]) %>
            </div>
            <h3><%= job[:title] %></h3> <%# Affichage du titre du m√©tier %>
            <p><%= job[:description] %></p>
            <a href="<%= job[:title] == 'Eb√©niste' ? job_path(Job.find_by(title:"Menuisier")) : "#" %>" class="psy-btn-primary">Regardez ce m√©tier</a>
          </div>

          <div class="psy-profile-image-container">
            <% if job[:image_url].present? %>
              <%= image_tag(job[:image_url], alt: job[:title], class: "psy-profile-image") %>
            <% else %>
              <%= image_tag("default_profile.png", alt: "Image par d√©faut", class: "psy-profile-image") %>
            <% end %>
        </div>
      </div>
    <% end %>
  </div>

</div>
