<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Chargement...</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
</head>

<body class="loading-screen">
  <!-- Conteneur pour les étoiles -->
  <div id="stars-container"></div>

  <!-- Contenu principal -->
  <div class="center-content">
    <div class="logo-container">
      <h1 class="logo-text">
        <span>T</span><span>R</span><span>E</span><span>M</span><span class="logo-a">A</span>
        <img src="<%= asset_path('logointro.png') %>" alt="Logo" class="logo-dot">
      </h1>
    </div>

    <div class="enter-button" onclick="goHome()">START</div>
  </div>

  <!-- Script pour redirection -->
  <script>
    function goHome() {
      window.location.href = "<%= home_path %>";
    }
  </script>

  <!-- Script pour étoiles aléatoires -->
  <script>
    function createStar() {
      const star = document.createElement('div');
      star.classList.add('shooting-star');

      // Position de départ aléatoire
      star.style.top = Math.random() * window.innerHeight + 'px';
      star.style.left = Math.random() * window.innerWidth + 'px';

      // Départ légèrement décalé
      star.style.animationDelay = Math.random() * 1 + 's';
      document.getElementById('stars-container').appendChild(star);

      // Nettoyage après animation
      setTimeout(() => {
        star.remove();
      }, 1500);
    }

    // Génère une étoile toutes les 300ms
    setInterval(createStar, 300);
  </script>
</body>
</html>
